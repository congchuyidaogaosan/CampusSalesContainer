page {
  height: 100vh;
  width: 100%;
}

.container {
  background: #fff;
  min-height: 100vh;
  width: 100%;
  box-sizing: border-box;
  display: block;
}

/* 用户信息头部 */
.user-header {
  width: 100%;
  box-sizing: border-box;
  background: #fff;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
  position: relative;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.user-info {
  position: relative;
  display: flex;
  align-items: center;
  width: 100%;
}

/* 头像按钮样式 */
.avatar-wrapper {
  padding: 0;
  margin: 0;
  width: 140rpx;
  height: 140rpx;
  background: none;
  border: none;
}

.avatar-wrapper::after {
  border: none;
}

/* 头像样式 */
.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(0, 0, 0, 0.1);
}

/* 昵称输入框样式 */
.nickname-input {
  flex: 1;
  margin-left: 30rpx;
  padding: 10rpx 0;
  font-size: 36rpx;
  color: #333;
  font-weight: 500;
  background: transparent;
}

.nickname-input::placeholder {
  color: #999;
}

/* 订单部分样式 */
.order-section {
  border-radius: 12rpx;
  padding: 30rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.02);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.view-all {
  font-size: 28rpx;
  color: #666;
  display: flex;
  align-items: center;
}

.arrow {
  margin-left: 8rpx;
}

/* 订单状态图标 */
.order-stats {
  display: flex;
  justify-content: space-around;
  padding: 10rpx 0;
}

.stat-item {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10rpx;
}

.stat-item image {
  width: 56rpx;
  height: 56rpx;
  margin-bottom: 12rpx;
}

.stat-item text {
  font-size: 28rpx;
  color: #333;
}

.badge {
  position: absolute;
  top: -6rpx;
  right: -6rpx;
  background: #ff4d4f;
  color: #fff;
  font-size: 22rpx;
  padding: 2rpx 10rpx;
  border-radius: 20rpx;
  min-width: 28rpx;
  text-align: center;
}

/* 功能列表样式 */
.function-list {
  border-radius: 12rpx;
  margin: 20rpx;
}

.function-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.function-item:last-child {
  border-bottom: none;
}

.function-item image {
  width: 44rpx;
  height: 44rpx;
  margin-right: 20rpx;
}

.function-item text {
  font-size: 30rpx;
  color: #333;
}

.function-item .arrow {
  margin-left: auto;
  color: #999;
  font-size: 24rpx;
}

/* 登录按钮样式 */
.login-btn {
  width: calc(100% - 40rpx);
  height: 88rpx;
  line-height: 88rpx;
  background: #ff9a9e;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  margin: 40rpx 20rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(255, 154, 158, 0.3);
}

.login-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 6rpx rgba(255, 154, 158, 0.2);
} 