.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f7f7f7;
}

.cart-list {
  flex: 1;
  padding: 20rpx;
}

.cart-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: #fff;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
}

.cart-item checkbox {
  margin-right: 20rpx;
  transform: scale(0.8);
}

.cart-item image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 160rpx;
}

.item-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.item-price {
  font-size: 32rpx;
  color: #e4393c;
  font-weight: bold;
}

.item-quantity input {
  width: 80rpx;
  text-align: center;
  border: 1rpx solid #eee;
}

.delete-btn {
  padding: 12rpx 24rpx;
  background: #fff;
  color: #666;
  border-radius: 26rpx;
  font-size: 24rpx;
  border: 1rpx solid #ddd;
  margin-left: 20rpx;
}

.bottom-bar {
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  border-top: 1rpx solid #f5f5f5;
}

.select-all {
  display: flex;
  align-items: center;
}

.select-all checkbox {
  transform: scale(0.8);
}

.select-all text {
  font-size: 28rpx;
  margin-left: 10rpx;
  color: #333;
}

.total-price {
  flex: 1;
  text-align: right;
  margin-right: 30rpx;
}

.total-price text {
  font-size: 28rpx;
  color: #666;
}

.total-price .price {
  font-size: 36rpx;
  color: #e4393c;
  font-weight: bold;
}

.checkout-btn {
  width: 200rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  background: #e4393c;
  color: #fff;
  border-radius: 36rpx;
  font-size: 28rpx;
}

.quantity-control {
  display: flex;
  align-items: center;
  height: 52rpx;
  border: 1rpx solid #eee;
  border-radius: 26rpx;
  width: fit-content;
  background: #fff;
}

.quantity-control .minus,
.quantity-control .plus {
  width: 52rpx;
  height: 52rpx;
  line-height: 52rpx;
  text-align: center;
  font-size: 24rpx;
  color: #333;
}

.quantity-control input {
  width: 70rpx;
  height: 52rpx;
  min-height: 52rpx;
  line-height: 52rpx;
  text-align: center;
  font-size: 24rpx;
  border: none;
  border-left: 1rpx solid #eee;
  border-right: 1rpx solid #eee;
}

.quantity-control .minus.disabled {
  color: #ccc;
} 