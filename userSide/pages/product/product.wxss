.container {
  padding-bottom: 100rpx;
}

.product-image {
  width: 100%;
  height: 750rpx;
}

.product-info {
  padding: 20rpx;
  background: #fff;
}

.product-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.product-price {
  font-size: 36rpx;
  color: #e4393c;
  font-weight: bold;
  margin: 20rpx 0;
}

.product-stock {
  font-size: 24rpx;
  color: #999;
}

.product-detail {
  margin-top: 20rpx;
  background: #fff;
  padding: 20rpx;
}

.detail-item {
  margin-bottom: 20rpx;
}

.detail-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.detail-value {
  font-size: 28rpx;
  color: #333;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  border-top: 1rpx solid #eee;
}

.quantity-control {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.quantity-control text {
  font-size: 28rpx;
  margin-right: 10rpx;
}

.quantity-control input {
  width: 80rpx;
  text-align: center;
  border: 1rpx solid #eee;
}

.action-buttons {
  flex: 1;
  display: flex;
  justify-content: flex-end;
}

.add-cart, .buy-now {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  margin-left: 20rpx;
  font-size: 28rpx;
}

.add-cart {
  background: #ffd591;
  color: #333;
}

.buy-now {
  background: #e4393c;
  color: #fff;
} 