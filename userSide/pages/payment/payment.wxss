.container {
  padding: 20rpx;
}

.machine-info {
  background: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.machine-name {
  font-size: 32rpx;
  font-weight: bold;
}

.order-items {
  background: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.order-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.order-item:last-child {
  border-bottom: none;
}

.order-item image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.item-name {
  font-size: 28rpx;
  color: #333;
}

.item-price {
  font-size: 32rpx;
  color: #e4393c;
  margin: 10rpx 0;
}

.item-quantity {
  font-size: 24rpx;
  color: #999;
}

.order-total {
  background: #fff;
  padding: 20rpx;
  border-radius: 8rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.total-price {
  font-size: 36rpx;
  color: #e4393c;
  font-weight: bold;
}

.pay-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #e4393c;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
} 