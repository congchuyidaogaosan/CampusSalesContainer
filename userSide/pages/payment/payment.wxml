<view class="container">
  <view class="order-info">
    <view class="order-header">
      <text class="order-number">订单号：{{orderInfo.orderNumber}}</text>
      <text class="order-time">{{orderInfo.orderTime}}</text>
    </view>

    <!-- 商品列表 -->
    <view class="order-items">
      <view class="order-item" wx:for="{{orderInfo.items}}" wx:key="id">
        <image src="{{item.productImage}}" mode="aspectFill" />
        <view class="item-info">
          <text class="item-name">{{item.productName}}</text>
          <view class="item-price-qty">
            <text class="item-price">¥{{item.productPrice}}</text>
            <text class="item-quantity">x{{item.num}}</text>
          </view>
        </view>
      </view>
    </view>

    <!-- 订单金额 -->
    <view class="order-total">
      <text>订单金额</text>
      <text class="total-price">¥{{orderInfo.orderAmount}}</text>
    </view>
  </view>

  <!-- 支付按钮 -->
  <view class="bottom-bar">
    <button class="pay-btn" bindtap="onSubmit">确认支付 ¥{{orderInfo.orderAmount}}</button>
  </view>
</view>

<wxs module="utils">
module.exports = {
  formatPrice: function(price) {
    return parseFloat(price).toFixed(2)
  }
}
</wxs>