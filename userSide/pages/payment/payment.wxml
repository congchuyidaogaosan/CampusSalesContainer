<view class="container">
  <!-- 售货柜信息 -->
  <view class="machine-info">
    <text class="machine-name">{{orderInfo.machineName}}</text>
  </view>

  <!-- 商品列表 -->
  <view class="order-items">
    <view class="order-item" wx:for="{{orderInfo.items}}" wx:key="id">
      <image src="{{item.imageUrl}}" mode="aspectFill" />
      <view class="item-info">
        <text class="item-name">{{item.name}}</text>
        <text class="item-price">¥{{item.price}}</text>
        <text class="item-quantity">x{{item.quantity}}</text>
      </view>
    </view>
  </view>

  <!-- 订单金额 -->
  <view class="order-total">
    <text>订单金额</text>
    <text class="total-price">¥{{orderInfo.totalPrice}}</text>
  </view>

  <!-- 支付按钮 -->
  <button class="pay-btn" bindtap="onSubmit">确认支付</button>
</view>