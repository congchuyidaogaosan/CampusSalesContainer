page {
  height: 100vh;
  width: 100%;
}

.container {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.search-box {
  padding: 20rpx;
  background: #fff;
  width: 100%;
  box-sizing: border-box;
}

.search-box input {
  background: #f5f5f5;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  text-align: center;
}

.content {
  flex: 1;
  display: flex;
  width: 100%;
  overflow: hidden;
}

.category-list {
  width: 200rpx;
  height: 100%;
  background: #f7f7f7;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0;
  font-size: 28rpx;
  position: relative;
}

.category-item.active {
  background: #fff;
  color: #1aad19;
}

.category-item.active::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background: #1aad19;
}

.category-item image {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.product-list {
  flex: 1;
  height: 100%;
  background: #fff;
  padding: 20rpx;
  box-sizing: border-box;
}

.product-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  width: 100%;
}

.product-item:last-child {
  border-bottom: none;
}

.product-item image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 28rpx;
  color: #333;
}

.product-price {
  font-size: 32rpx;
  color: #e4393c;
  font-weight: bold;
}

.product-stock {
  font-size: 24rpx;
  color: #999;
} 