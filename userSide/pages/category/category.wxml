<view class="container">
  <!-- 搜索框 -->
  <view class="search-box">
    <input type="text" placeholder="搜索商品" bindinput="onSearch" value="{{searchValue}}"/>
  </view>

  <view class="content">
    <!-- 左侧分类列表 -->
    <scroll-view class="category-list" scroll-y enable-flex>
      <view 
        class="category-item {{item.id === currentCategory ? 'active' : ''}}"
        wx:for="{{categories}}"
        wx:key="id"
        bindtap="onCategoryTap"
        data-id="{{item.id}}"
      >
        <image src="{{item.icon}}" mode="aspectFit"/>
        <text>{{item.name}}</text>
      </view>
    </scroll-view>

    <!-- 右侧商品列表 -->
    <scroll-view class="product-list" scroll-y enable-flex>
      <view 
        class="product-item"
        wx:for="{{products}}"
        wx:key="id"
        bindtap="onProductTap"
        data-id="{{item.id}}"
      >
        <image src="{{item.imageUrl}}" mode="aspectFill"/>
        <view class="product-info">
          <text class="product-name">{{item.name}}</text>
          <text class="product-price">¥{{item.price}}</text>
          <text class="product-stock">库存: {{item.stock}}</text>
        </view>
      </view>
    </scroll-view>
  </view>
</view> 