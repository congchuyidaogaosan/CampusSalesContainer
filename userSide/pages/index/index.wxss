/**index.wxss**/
page {
  height: 100vh;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.container {
  padding: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.scrollarea {
  flex: 1;
  overflow-y: auto;
  width: 100%;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

.search-box {
  padding: 20rpx;
  background: #fff;
  width: 100%;
  box-sizing: border-box;
}

.search-box input {
  background: #f5f5f5;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  text-align: center;
}

.banner {
  width: 100%;
  height: 300rpx;
}

.banner image {
  width: 100%;
  height: 100%;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  padding: 20rpx;
  background: #fff;
}

.location-section {
  margin-top: 20rpx;
  background: #fff;
  width: 100%;
}

.location-list {
  padding: 0 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.location-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.location-item image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.location-info {
  flex: 1;
}

.location-name {
  font-size: 28rpx;
  font-weight: bold;
}

.location-address {
  font-size: 24rpx;
  color: #666;
  margin: 10rpx 0;
}

.location-distance {
  font-size: 24rpx;
  color: #999;
}

.hot-section {
  margin-top: 20rpx;
  background: #fff;
  width: 100%;
}

.product-list {
  display: flex;
  flex-wrap: wrap;
  padding: 0 10rpx;
  width: 100%;
  box-sizing: border-box;
}

.product-item {
  width: 50%;
  padding: 10rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.product-item image {
  width: 100%;
  height: 345rpx;
  border-radius: 8rpx;
}

.product-info {
  padding: 10rpx;
  width: 100%;
  box-sizing: border-box;
}

.product-name {
  font-size: 28rpx;
  color: #333;
}

.product-price {
  font-size: 32rpx;
  color: #e4393c;
  font-weight: bold;
  margin-top: 10rpx;
}
